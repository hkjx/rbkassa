= form_for @order do |f|
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :merchant
    = f.collection_select :merchant, Order::MERCHANT_PROVIDERS, :to_s, :humanize    
  .field
    = f.label :currency
    = f.select :currency, options_for_select(Order::CURRENTIES)     
  .actions
    = f.submit 'Save'
