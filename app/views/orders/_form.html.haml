= form_for @order do |f|
  -if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :currency
    = f.text_field :currency
  .actions
    = f.submit 'Save'
